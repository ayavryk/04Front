{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "app",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "awesomeTypescriptLoaderOptions": {
    "emitRequireType": true,
    "useBabel": false,
    "useCache": false
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
